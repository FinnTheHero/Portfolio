---
import { IFrameworks } from "@types";

const { title, frameworks, languages } = Astro.props as IFrameworks;
---

<section
	class="flex items-start justify-start flex-col sm:flex-row dark:text-light"
>
	<h2 class="w-[15rem] mt-16">{title}</h2>
	<div class="w-[50%] flex flex-row m-12">
		{
            <div class="my-16">
                <h3 class="text-xl font-semibold">Frameworks</h3>
	    		{frameworks.map((item, index) => (
					<ul class="mt-3">
                        <li class="dark:text-gray"><pre>{item.name}</pre> </li>
					</ul>
                    ))}
            </div>
		}
	</div>
    <div class="w-[50%] flex flex-row m-12">
		{
            <div class="my-16">
                <h3 class="text-xl font-semibold">Languages</h3>
	    		{languages.map((item, index) => (
					<ul class="mt-3">
                        <li class="dark:text-gray"><pre>{item.name}</pre> </li>
					</ul>
                    ))}
            </div>
		}
	</div>
</section>